<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".XboxLayout">

    <Button
        android:id="@+id/buttonY"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:layout_marginBottom="124dp"
        android:text="Y(1)"
        android:textSize="20sp"
        app:backgroundTint="#FFC107"
        app:layout_constraintBottom_toTopOf="@+id/buttonA"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonB"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="8dp"
        android:text="B(2)"
        android:textSize="20sp"
        app:backgroundTint="#E91E63"
        app:layout_constraintBottom_toTopOf="@+id/buttonA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonY"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/buttonX"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:text="X(4)"
        android:textSize="20sp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toTopOf="@+id/buttonA"
        app:layout_constraintEnd_toStartOf="@+id/buttonB"
        app:layout_constraintTop_toBottomOf="@+id/buttonY"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/buttonA"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:layout_marginBottom="16dp"
        android:text="A(3)"
        android:textSize="20sp"
        app:backgroundTint="#8BC34A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:textSize="10sp"
        app:backgroundTint="#000000"
        app:icon="?attr/actionModeCopyDrawable"
        app:layout_constraintEnd_toStartOf="@+id/buttonStart"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/buttonStart"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:textSize="10sp"
        app:backgroundTint="#000000"
        app:icon="@android:drawable/ic_media_play"
        app:layout_constraintEnd_toStartOf="@+id/buttonX"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonRT"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="12dp"
        android:text="RT"
        android:textSize="10sp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonY"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonLT"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="12dp"
        android:text="LT"
        android:textSize="10sp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonY"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonLB"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="12dp"
        android:text="LB(5)"
        android:textSize="10sp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonY"
        app:layout_constraintStart_toEndOf="@+id/buttonLT" />

    <Button
        android:id="@+id/buttonRB"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="12dp"
        android:text="RB(6)"
        android:textSize="10sp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonY"
        app:layout_constraintEnd_toStartOf="@+id/buttonRT" />

    <ImageButton
        android:id="@+id/imageButtonUp"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="152dp"
        android:layout_marginLeft="152dp"
        android:layout_marginBottom="48dp"
        android:background="@null"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/up_arrow"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonDown"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonDown"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="152dp"
        android:layout_marginLeft="152dp"
        android:layout_marginBottom="12dp"
        android:background="@null"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/down_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonLeft"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/left_arrow"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonDown"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonRight"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/right_arrow"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonDown"
        app:layout_constraintStart_toEndOf="@+id/imageButtonLeft" />

    <com.example.androidclient.JoystickView
        android:id="@+id/leftJoystickView"
        android:layout_width="150dp"
        android:layout_height="143dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="5dp"
        app:JV_backgroundColor="#65191C1C"
        app:JV_borderColor="#65191C1C"
        app:JV_borderWidth="4dp"
        app:JV_buttonColor="#19120F"
        app:JV_buttonSizeRatio="30%"
        app:JV_fixedCenter="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLT" />

    <com.example.androidclient.JoystickView
        android:id="@+id/rightJoystickView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="44dp"
        app:JV_backgroundColor="#65191C1C"
        app:JV_borderColor="#65191C1C"
        app:JV_borderWidth="4dp"
        app:JV_buttonColor="#19120F"
        app:JV_buttonSizeRatio="30%"
        app:JV_fixedCenter="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButtonRight" />

</androidx.constraintlayout.widget.ConstraintLayout>