<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layout">

    <Button
        android:id="@+id/buttonY"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:layout_marginBottom="124dp"
        android:text="Y(1)"
        android:textSize="20sp"
        app:backgroundTint="#FFC107"
        app:layout_constraintBottom_toTopOf="@+id/buttonA"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonB"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="8dp"
        android:text="B(2)"
        android:textSize="20sp"
        app:backgroundTint="#E91E63"
        app:layout_constraintBottom_toTopOf="@+id/buttonA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonY"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/buttonX"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:text="X(4)"
        android:textSize="20sp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toTopOf="@+id/buttonA"
        app:layout_constraintEnd_toStartOf="@+id/buttonB"
        app:layout_constraintTop_toBottomOf="@+id/buttonY"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/buttonA"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:layout_marginBottom="16dp"
        android:text="A(3)"
        android:textSize="20sp"
        app:backgroundTint="#8BC34A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="Back(9)"
        android:textSize="10sp"
        app:backgroundTint="#000000"
        app:layout_constraintEnd_toStartOf="@+id/buttonStart"
        app:layout_constraintTop_toBottomOf="@+id/button13" />

    <Button
        android:id="@+id/buttonRS"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="RS(12)"
        android:textSize="10sp"
        app:backgroundTint="#000000"
        app:layout_constraintEnd_toStartOf="@+id/buttonX"
        app:layout_constraintTop_toBottomOf="@+id/buttonStart" />

    <Button
        android:id="@+id/buttonLS"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="LS(11)"
        android:textSize="10sp"
        app:backgroundTint="#000000"
        app:layout_constraintEnd_toStartOf="@+id/buttonRS"
        app:layout_constraintTop_toBottomOf="@+id/buttonBack" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Start(10)"
        android:textSize="10sp"
        app:backgroundTint="#000000"
        app:layout_constraintEnd_toStartOf="@+id/buttonX"
        app:layout_constraintTop_toBottomOf="@+id/button13" />

    <Button
        android:id="@+id/buttonRB"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="5dp"
        android:text="RB(6)"
        android:textSize="10sp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonY"
        app:layout_constraintEnd_toStartOf="@+id/buttonRT" />

    <Button
        android:id="@+id/buttonLT"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="5dp"
        android:text="LT"
        android:textSize="10sp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonY"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonLB"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginBottom="5dp"
        android:text="LB(5)"
        android:textSize="10sp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonY"
        app:layout_constraintStart_toEndOf="@+id/buttonLT" />

    <Button
        android:id="@+id/button13"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="5dp"
        android:text="13"
        android:textSize="10sp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonY"
        app:layout_constraintEnd_toStartOf="@+id/buttonRB"
        app:layout_constraintHorizontal_bias="0.412"
        app:layout_constraintStart_toEndOf="@+id/buttonLB" />

    <Button
        android:id="@+id/buttonRT"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="5dp"
        android:text="RT"
        android:textSize="10sp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonY"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageButton
        android:id="@+id/imageButtonRight"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="5dp"
        android:background="@null"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/right_arrow"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonDown"
        app:layout_constraintStart_toEndOf="@+id/imageButtonLeft" />

    <ImageButton
        android:id="@+id/imageButtonLeft"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="5dp"
        android:background="@null"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/left_arrow"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonDown"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonUp"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="55dp"
        android:background="@null"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/up_arrow"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonDown"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonDown"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/down_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>