<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layout">

    <Button
        android:id="@+id/buttonY"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:layout_marginBottom="100dp"
        android:text="Y(1)"
        android:textSize="20sp"
        app:backgroundTint="#FFC107"
        app:layout_constraintBottom_toTopOf="@+id/buttonA"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonX"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="4dp"
        android:text="X(4)"
        android:textSize="20sp"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toTopOf="@+id/buttonA"
        app:layout_constraintEnd_toStartOf="@+id/buttonB" />

    <Button
        android:id="@+id/buttonA"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:layout_marginBottom="12dp"
        android:text="A(3)"
        android:textSize="20sp"
        app:backgroundTint="#8BC34A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/buttonB"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        android:text="B(2)"
        android:textSize="20sp"
        app:backgroundTint="#E91E63"
        app:layout_constraintBottom_toTopOf="@+id/buttonA"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="60dp"
        android:textSize="10sp"
        app:backgroundTint="#000000"
        app:icon="?attr/actionModeCopyDrawable"
        app:layout_constraintBottom_toTopOf="@+id/buttonY"
        app:layout_constraintEnd_toStartOf="@+id/buttonStart"
        app:layout_constraintStart_toEndOf="@+id/buttonLB"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="48dp"
        android:textSize="10sp"
        app:backgroundTint="#000000"
        app:icon="@android:drawable/ic_media_play"
        app:layout_constraintBottom_toTopOf="@+id/buttonY"
        app:layout_constraintEnd_toStartOf="@+id/buttonRB"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.612" />

    <Button
        android:id="@+id/buttonRT"
        android:layout_width="115dp"
        android:layout_height="82dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="12dp"
        android:text="RT"
        android:textSize="10sp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonLB"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="52dp"
        android:text="LB(5)"
        android:textSize="10sp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonY"
        app:layout_constraintStart_toEndOf="@+id/buttonLT"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.529" />

    <Button
        android:id="@+id/buttonLT"
        android:layout_width="132dp"
        android:layout_height="78dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="28dp"
        android:text="LT"
        android:textSize="10sp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonRB"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="44dp"
        android:text="RB(6)"
        android:textSize="10sp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonY"
        app:layout_constraintEnd_toStartOf="@+id/buttonRT"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.androidclient.JoystickView
        android:id="@+id/leftJoystickView"
        android:layout_width="164dp"
        android:layout_height="160dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        app:JV_backgroundColor="#65191C1C"
        app:JV_borderColor="#65191C1C"
        app:JV_borderWidth="4dp"
        app:JV_buttonColor="#19120F"
        app:JV_buttonSizeRatio="30%"
        app:JV_fixedCenter="false"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonDown"
        app:layout_constraintStart_toEndOf="@+id/imageButtonLeft" />

    <ImageButton
        android:id="@+id/imageButtonDown"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/down_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonUp"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        android:layout_marginBottom="164dp"
        android:background="@null"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/up_arrow"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonDown"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonRight"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="164dp"
        android:layout_marginLeft="164dp"
        android:background="@null"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/right_arrow"
        app:layout_constraintStart_toEndOf="@+id/imageButtonLeft"
        tools:layout_editor_absoluteY="199dp" />

    <ImageButton
        android:id="@+id/imageButtonLeft"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="160dp"
        android:background="@null"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/left_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.example.androidclient.JoystickView
        android:id="@+id/rightJoystickView"
        android:layout_width="164dp"
        android:layout_height="160dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:JV_backgroundColor="#65191C1C"
        app:JV_borderColor="#65191C1C"
        app:JV_borderWidth="4dp"
        app:JV_buttonColor="#19120F"
        app:JV_buttonSizeRatio="30%"
        app:JV_fixedCenter="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonX"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toEndOf="@+id/imageButtonRight" />


</androidx.constraintlayout.widget.ConstraintLayout>